{
	"name": "react-create-component",
	"displayName": "React Create Component",
	"description": "Creates all files needed for a component to be built.",
	"publisher": "MatteoVeraldi",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:react-create-component.createReactComponent"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [{
			"command": "react-create-component.createReactComponent",
			"title": "Create React Component"
		}],
		"menus": {
			"explorer/context": [{
				"when": "explorerResourceIsFolder",
				"command": "react-create-component.createReactComponent",
				"group": "ReactCreate@1"
			}],
			"commandPalette": [{
				"command": "react-create-component.createReactComponent",
				"when": "false"
			}]
		},
		"snippets": [{
			"language": "javascript",
			"path": "./src/snippets/react-test.code-snippets.json"
		}]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/ejs": "^3.0.4",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.47.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"ejs": "^3.1.3"
	}
}